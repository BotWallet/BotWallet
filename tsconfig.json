{
  "extends": "./ts.config.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "./root",
    "outDir": "app",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@app-types": [
        "types/index"
      ],
      "@app-config": [
        "../config"
      ],
      "@app-models": [
        "src/models/index"
      ],
      "@app-controllers": [
        "src/controllers/index"
      ],
      "@app-common": [
        "src/common/index"
      ]
    }
  }
}
