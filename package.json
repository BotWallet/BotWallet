{
  "name": "isBotWallet",
  "version": "1.0.0",
  "repository": "https://github.com/BotWallet/BotWallet.git",
  "author": "AlekseyShatohin <56636950+AlekseyShatohin@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register app/root/src/bot.js",
    "build": "yarn build-ts",
    "build-ts": "tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon app/root/src/bot.js"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./root/src/bot.ts",
    "ext": "ts, js"
  },
  "dependencies": {
    "@types/node": "^13.13.5",
    "@types/request-promise": "^4.1.46",
    "concurrently": "^5.2.0",
    "mongodb": "^3.5.7",
    "nodemon": "^2.0.3",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "socks5-https-client": "^1.2.1",
    "telegraf": "^3.38.0",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  }
}
